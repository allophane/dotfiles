[module/pulseaudio-rofi-output]
type = custom/script

format = <label>
format-padding = 2

exec = ~/.config/polybar/scripts/pulseaudio-rofi.sh --output_volume_listener
tail = true
click-right = ~/.config/polybar/scripts/pulseaudio-rofi.sh --output
click-left = ~/.config/polybar/scripts/pulseaudio-rofi.sh --mute
scroll-up =  ~/.config/polybar/scripts/pulseaudio-rofi.sh --volume_up
scroll-down = ~/.config/polybar/scripts/pulseaudio-rofi.sh --volume_down


[module/i3]

type = internal/i3
;
;strip-wsnumbers = true
;
;label-focused-padding = 3
;label-unfocused-padding = 3
;
;label-focused-background = ${colors.background-alt}
label-unfocused-background = ${colors.background-unf}
;
;label-mode-padding = 0
;label-mode-background = ${colors.background-unf}
;
;label-visible-underline = #555555
;label-visible-padding = 4


; Available tokens:
;   %mode%
; Default: %mode%
label-mode = %mode%
label-mode-padding = 2
label-mode-background = #e60053

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-focused = %name%
label-focused-foreground = #ffffff
label-focused-background = ${colors.background-alt}
label-focused-underline = #fba922
label-focused-padding = 2

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-unfocused = %name%
label-unfocused-padding = 2

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-visible = %name%
label-visible-underline = #555555
label-visible-padding = 2

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-urgent = %name%
