[include]
  path = ~/.gitconfig.local
  path = ~/.gitconfig.aliases

[core]
  editor = vim
  excludesfile = ~/.gitignore-global

[diff]
  tool = vimdiff

[color]
  ui = auto

[color "status"]
  added = green bold
  changed = yellow bold
  untracked = red bold

[push]
  default = simple

[url "git://github.com/"]
  insteadOf = gh:

[url "https://bitbucket.org/"]
  insteadOf = bb:

[credential]
  helper = cache --timeout=28800

[difftool]
  prompt = false

[commit]
