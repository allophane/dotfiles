# http://editorconfig.org/
root = true

[*]
charset = utf-8
indent_size = 2
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.elm]
indent_style = space
indent_size = 4

[{Makefile,**.mk}]
indent_size = 4
indent_style = tab

[*.md]
trim_trailing_whitespace = false
